<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n</pattern>
        </encoder>
    </appender>
    <logger name="org.apache.cassandra" level="OFF"/>
    <root level="INFO">
        <appender-ref ref="stdout"/>
    </root>
</configuration>